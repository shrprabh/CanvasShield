{
  "manifest_version": 3,
  "name": "Canvas Fingerprint Detector",
  "version": "1.0",
  "description": "Detects and reports canvas fingerprinting attempts",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icon.svg",
      "128": "assets/icon.svg"
    }
  },
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/detector.js", "scripts/content.js"]
    }
  ],
  "icons": {
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  }
}
