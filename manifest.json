{
  "manifest_version": 3,
  "name": "Canvas Fingerprint Detector",
  "version": "1.0.0",
  "description": "Detects and reports canvas fingerprinting attempts with enhanced detection methods",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icon.svg",
      "128": "assets/icon.svg"
    }
  },
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/detector.js", "scripts/content.js"],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "48": "assets/icon.svg",
    "128": "assets/icon.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "canvas-fingerprint-detector@example.com",
      "strict_min_version": "109.0"
    }
  },
  "host_permissions": [
  "http://localhost:5001/*"
]
  
}